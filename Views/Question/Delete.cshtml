@model QuestionFC.Models.Question

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-image: url('/images/foot.jpg');
        background-size: cover;
        background-position: center;
        color: #ffffff; /* Set text color to white */
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    h1,
    h3,
    h4 {
        color: #000000; /* Set title text color to black */
    }

    dl {
        background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background for the details */
        padding: 20px;
        border-radius: 10px;
        width: 100%;
        max-width: 600px;
        margin: auto;
    }

    dt, dd {
        padding: 10px;
        text-align: left;
    }

    .btn {
        color: #ffffff; /* Set text color for buttons to white */
        margin-right: 5px;
    }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="QuestionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Ajoutez la référence vers le fichier deleteQuestion.js -->
    <script src="~/js/Delete.js"></script>
}
